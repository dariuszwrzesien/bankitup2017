{% extends 'layout.html.twig' %}

{% block body %}
    <form method="post" class="form-horizontal">
        <div class="form-group">
            <label for="input-subject" class="col-sm-2 control-label">Subject</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="subject" id="input-subject" value="{{ template.subject }}">
            </div>
        </div>
        <div class="form-group">
            <label for="input-body" class="col-sm-2 control-label">Body</label>
            <div class="col-sm-10">
                <textarea name="body" id="input-body" rows="10" style="width: 100%;">{{ template.body }}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Help</label>
            <div class="col-sm-10">
                Available variables:
                <ul>
                    {% for var in template.vars|split(',') %}
                        <li>{{ var }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <a href="{{ path('email_template_list') }}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> Back to list</a>
            </div>
            <div class="col-sm-10 button-group-right">
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </form>
{% endblock %}

{% block header %}
    Edit template
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('js/app/email-template/edit.js') }}"></script>
{% endblock %}