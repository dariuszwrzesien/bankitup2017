{% extends 'layout_cover.html.twig' %}

{% block body %}
    <h1 class="cover-heading">Zaloguj się</h1>
    <form class="form-signin" action="/auth" method="post">
        <p class="alert alert-danger" style="display: none;">Podano nieprawidłowe dane.</p>
        <input type="text" class="form-control" name="username" placeholder="Podaj adres e-mail" required=""
               autofocus="">
        <input type="password" class="form-control" name="password" placeholder="Podaj hasło" required="">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Zaloguj</button>
    </form>
{% endblock %}